CREATE FUNCTION fn_usuarios_upd(integer, character varying, character varying, character varying, character varying, character varying, smallint) RETURNS smallint
    LANGUAGE plpgsql
    AS $_$
declare
  idu alias for $1;
  cod alias for $2;
  nom alias for $3;
  ape alias for $4;
  cor alias for $5;
  ide alias for $6;
  per alias for $7;
begin
